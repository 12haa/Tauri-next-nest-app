name: Merge Dev to Main on: push: branches: - dev jobs: merge: runs-on: ubuntu-latest steps: - uses: actions/checkout@v3 with: fetch-depth: 0 - name: Configure Git run: | git config user.name "github-actions[bot]" git config user.email "github-actions[bot]@users.noreply.github.com" - name: Merge dev into main run: | git checkout main git merge --no-ff dev -m "Auto-merged dev into main via GitHub Actions" git push origin main
