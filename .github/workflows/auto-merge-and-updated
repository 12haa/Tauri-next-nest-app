name: Dev To Main PR

on:
  push:
    branches: [dev]

permissions:
  contents: write
  pull-requests: write

jobs:
  create-or-update-pr:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - name: Create or update PR
        uses: repo-sync/pull-request@v2
        with:
          source_branch: "dev"
          destination_branch: "main"
          pr_title: "Sync dev â†’ main"
          pr_body: "Automated PR from dev to main"
          pr_allow_empty: true
          github_token: ${{ secrets.GITHUB_TOKEN }}

  # Optional: auto-merge when checks pass
  auto-merge:
    needs: create-or-update-pr
    runs-on: ubuntu-latest
    permissions:
      contents: write
      pull-requests: write
    steps:
      - name: Enable auto-merge
        uses: peter-evans/enable-pull-request-automerge@v3
        with:
          token: ${{ secrets.GITHUB_TOKEN }}
          pull-request-number: ${{ steps.create-or-update-pr.outputs.pr_number }}
          merge-method: squash
